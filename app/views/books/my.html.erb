<h1>My Books</h1>

<% if @books.empty? %>
  <div>
    <p>You don't have books to trade</p>
  </div>
<% else %>
  <div class="container d-flex flex-wrap">
  </div>
  <% @books.each do |book| %>
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary"><%= book.title %></strong>
        <h6 class="mb-0">
          <a class="text-dark" href="#"><%= book.author %></a>
        </h6>
        <div class="mb-1 text-muted small"><%= book.user %></div>
          <p class="card-text mb-auto"><%= book.synopsis %></p>
          <%= link_to "Delete", book_path(book), :method => :delete, data: {:confirm => "You sure?" , :turbo_method => :delete, :turbo => true}, class: "btn btn-outline-primary btn-sm" %>
        </div>
        <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src=<%= book.photo %> style="width: 200px; height: 250px;">
    </div>
  </div>
  <% end %>
<% end %>
