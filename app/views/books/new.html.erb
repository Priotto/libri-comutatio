<h1 class="text-center">Search a Book</h1>

<div class="container">
  <div data-controller="autocomplete" data-autocomplete-url-value="/autocomplete">
    <label for="simple-input" class="form-label">Select a Book</label>
    <input name="simple-input" type="text" class="form-control mb-3" id="simple-input" data-autocomplete-target="input" placeholder="Search a Book"/>
    <input type="hidden" name="book_id" data-autocomplete-target="hidden"/>
    <div data-autocomplete-target="results" class="row"></div>
  </div>
</div>
