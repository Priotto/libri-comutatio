<h1 class="text-center mb-5">Book Stash</h1>

<div class="container d-flex flex-wrap">
  <div class="row">
    <% @books.available.each do |book| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-primary"><%= book.title.truncate(55) %></strong>
            <h6 class="mb-0 text-dark">
              <%= book.author %>
            </h6>
            <div class="mb-1 text-muted small"><%= book.user.full_name %></div>
              <p class="card-text mb-auto"><%= book.synopsis.truncate(160) unless @book.synopsis.nil? %></p>
              <%= link_to "Book info", book_path(book), id: "buttoncard", class: "btn btn-primary btn-rounded" %>
          </div>
            <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src=<%= book.thumbnail %> style="width: 200px; height: 250px;">
        </div>
      </div>
    <% end %>
  </div>
</div>
