<div class="mt-5">
  <h1>Show da Book</h1>
  <%= @book.title %>
  <%= @book.author %>
  <%= @book.description %>
  <img src="<%= @book.thumbnail %>" alt="">
  <%= @book.user.firstname %>
  <% if @reputation == 0 %>
    <p>This user is new</p>
  <% else %>
    <%= @reputation %>
  <% end %>

  <div class="container-show-book">
    <%= @book.title %>
    <%= @book.author %>
    <%= @book.description %>
    <%= @book.user.firstname %>
    <% if @reputation == 0 %>
      <p>This user is new</p>
    <% else %>
      <%= @reputation %>
    <% end %>
  </div>

  <% if current_user == @book.user %>
    <%= link_to "Edit Book", edit_book_path(@book) %>
    <%= link_to "Browse books to trade", books_path %>
  <% else %>
      <% if current_user.books.empty? %>
        <h3>You don't have books to trade</h3>
      <% else %>
        <%= simple_form_for [@book, @transaction] do |f| %>
        <%= f.association :buyer_book, collection: current_user.books.available, label_method: :title %>
        <%= f.button :submit %>
      <% end %>
    <% end %>
  <% end %>



<div class="perfil-show">
  <div>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
  </div>

  <div>
    <h5>
      <%= @book.user.firstname %>
    </h5>
  </div>

  <button type="button" class="btn btn-info btn-chat-show">Chat</button>

  <hr>

  <div class="verified-show">
    <div>
      <h5>Verified</h5>
    </div>
    <div><i class="fa-brands fa-whatsapp"></i></div>
    <div><i class="fa-regular fa-envelope"></i></div>
  </div>

  <hr>

  <button type="button" class="btn btn-info btn-book-stash-show">Book Stash</button>
</div>

</div>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
