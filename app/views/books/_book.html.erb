<% @books.each_with_index do |result, index| %>

<div class="col-md-6">
         <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
               <strong class="d-inline-block mb-2 text-primary"><%= result[:title] %>.</strong>

               <div class="mb-1 text-muted small">Nov 12</div>
               <p class="card-text mb-auto"><%= result[:description] %>.</p>
               <%= button_to "Add book", book_build_path(book: result), method: :post, class: "btn btn-outline-primary btn-sm" %>
            </div>
            <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src= "<%= result[:thumbnail] %>" style="width: 200px; height: 250px;">
         </div>
      </div>
    <% end %>
