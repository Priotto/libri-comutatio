<div class="col-md-6">
  <div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
      <h6><strong class="d-inline-block mb-2 text-primary"><%= book.title %></strong></h6>
      <h6 class="mb-0">
        <a class="text-dark" href="#"><%= book.author %></a>
      </h6>
      <div class="mb-1 text-muted small">
        <p class="card-text mb-auto"><%= book.synopsis %></p>
        <%= link_to "Trade this book", book_path(book), class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>

    <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src=<%= book.photo %> style="width: 200px; height: 250px;" />
  </div>
</div>
