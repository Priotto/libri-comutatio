<% if flash[:notice] %>
  <script defer >
    (function (params) {
      swal({
        text: "<%= flash[:notice] %>",
        icon: "success",
      });
    })()
  </script>
<% end %>

<% if flash[:alert] %>
  <script>
    (function (params) {
      swal({
        text: "<%= flash[:alert] %>",
        icon: "error",
      });
    })()
  </script>
<% end %>
