<% if flash[:notice] %>
  <script>
    document.addEventListener('turbo:load', function() {
      swal({
        text: "<%= flash[:notice] %>",
        icon: "success",
      });
    });
  </script>
<% end %>

<% if flash[:alert] %>
  <script>
    document.addEventListener('turbo:load', function() {
      swal({
        text: "<%= flash[:alert] %>",
        icon: "error",
      });
    });
  </script>
<% end %>
